<Window x:Class="AtualizaAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AtualizaAPP - Atualizador Automático"
        Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource Background}"
        ResizeMode="NoResize">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Ellipse x:Name="StatusIcon"
                     Width="12" Height="12"
                     Fill="{StaticResource Success}"
                     VerticalAlignment="Center"
                     Margin="0,0,10,0"/>
            <TextBlock x:Name="StatusText"
                       Text="Aguardando atualização"
                       Style="{StaticResource Label}"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <TextBlock x:Name="ProgressDetail"
                   Grid.Row="1"
                   Style="{StaticResource Subtitle}"
                   VerticalAlignment="Center"/>

        <ProgressBar x:Name="Progress"
                     Grid.Row="2"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     Style="{StaticResource SimpleProgressBar}"/>
    </Grid>
</Window>

<Window x:Class="AtualizaAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AtualizaAPP - Atualizador Automático" 
        Height="580" Width="800"
        MinHeight="450" MinWidth="650"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource Background}"
        ResizeMode="CanResize">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="1*" MinHeight="200"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho com ícone -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource Border}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Ícone do aplicativo -->
                <Border Grid.Column="0" 
                        Background="{StaticResource Success}"
                        Width="40" Height="40"
                        CornerRadius="20">
                    <TextBlock Text="🔄" 
                               FontSize="20"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="AtualizaAPP" Style="{StaticResource Title}"/>
                    <TextBlock Text="Mantém aplicativos atualizados via releases do GitHub" 
                               Style="{StaticResource Subtitle}" 
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Configurações com layout responsivo -->
        <Border Grid.Row="2" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource Border}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Configurações do GitHub -->
                <GroupBox Grid.Row="0" Header="📁 Repositório GitHub" 
                          Style="{StaticResource {x:Type GroupBox}}"
                          Padding="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Owner/Repo -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MinWidth="100"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*" MinWidth="100"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="200" MinWidth="150"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="OwnerBox" 
                                     Grid.Column="0"
                                     Text="loboczss" 
                                     Style="{StaticResource SimpleTextBox}"
                                     ToolTip="Nome do proprietário do repositório"/>

                            <TextBlock Grid.Column="1" 
                                       Text=" / " 
                                       VerticalAlignment="Center" 
                                       FontWeight="Bold"
                                       Margin="8,0"/>

                            <TextBox x:Name="RepoBox" 
                                     Grid.Column="2"
                                     Text="leituraWPF" 
                                     Style="{StaticResource SimpleTextBox}"
                                     ToolTip="Nome do repositório"/>

                            <TextBlock Grid.Column="4" 
                                       Text="Filtro:" 
                                       VerticalAlignment="Center"
                                       Style="{StaticResource Label}"/>

                            <TextBox x:Name="AssetFilterBox" 
                                     Grid.Column="5"
                                     Text=".zip" 
                                     Style="{StaticResource SimpleTextBox}"
                                     ToolTip="Filtro para encontrar o arquivo de release (ex: .zip, .exe)"/>
                        </Grid>
                    </Grid>
                </GroupBox>

                <!-- Configurações do Aplicativo -->
                <GroupBox Grid.Row="2" Header="⚙️ Aplicativo de Destino" 
                          Style="{StaticResource {x:Type GroupBox}}"
                          Padding="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" MinWidth="150"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" MinWidth="150"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="Processo:" 
                                   VerticalAlignment="Center"
                                   Style="{StaticResource Label}"
                                   MinWidth="70"/>

                        <TextBox x:Name="ProcBox" 
                                 Grid.Column="1"
                                 Text="leituraWPF" 
                                 Style="{StaticResource SimpleTextBox}"
                                 ToolTip="Nome do processo a ser finalizado antes da atualização"/>

                        <TextBlock Grid.Column="3" 
                                   Text="Executável:" 
                                   VerticalAlignment="Center"
                                   Style="{StaticResource Label}"
                                   MinWidth="80"/>

                        <TextBox x:Name="ExeBox" 
                                 Grid.Column="4"
                                 Text="leituraWPF.exe" 
                                 Style="{StaticResource SimpleTextBox}"
                                 ToolTip="Nome do arquivo executável"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </Border>

        <!-- Status, Progresso e Log -->
        <Border Grid.Row="4" 
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource Border}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="*" MinHeight="120"/>
                </Grid.RowDefinitions>

                <!-- Status com ícone dinâmico -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Ellipse x:Name="StatusIcon"
                                 Width="12" Height="12" 
                                 Fill="{StaticResource Success}"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        <TextBlock x:Name="StatusText" 
                                   Text="Pronto para verificar atualizações"
                                   Style="{StaticResource Label}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock x:Name="VersionInfo"
                               Grid.Column="2"
                               Text="Versão: --"
                               Style="{StaticResource Label}"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"/>
                </Grid>

                <!-- Barra de progresso melhorada -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock Text="📊 Progresso" 
                                   Style="{StaticResource Label}"
                                   HorizontalAlignment="Left"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock x:Name="ProgressInfo" 
                                       Text="0%"
                                       Style="{StaticResource Label}"
                                       FontWeight="SemiBold"/>
                            <TextBlock x:Name="ProgressDetail" 
                                       Text=""
                                       Style="{StaticResource Label}"
                                       Margin="8,0,0,0"
                                       Foreground="{StaticResource TextSecondary}"/>
                        </StackPanel>
                    </Grid>

                    <ProgressBar x:Name="Progress" 
                                 Grid.Row="2"
                                 Minimum="0" 
                                 Maximum="100" 
                                 Value="0"
                                 Style="{StaticResource SimpleProgressBar}"
                                 Height="6"/>
                </Grid>

                <!-- Log com melhor apresentação -->
                <Grid Grid.Row="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock Text="📄 Log de Atividades" Style="{StaticResource Label}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                  
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="2"
                            BorderBrush="{StaticResource Border}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Background="#FAFAFA">
                        <ScrollViewer x:Name="LogScrollViewer"
                                      VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Auto"
                                      Padding="12">
                            <TextBox x:Name="LogBox" 
                                     IsReadOnly="True" 
                                     TextWrapping="Wrap"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontFamily="Consolas"
                                     FontSize="11"
                                     Foreground="{StaticResource TextSecondary}"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Disabled"
                                     HorizontalScrollBarVisibility="Disabled"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Botões com melhor espaçamento e ícones -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Informações adicionais à esquerda -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock x:Name="LastCheckInfo"
                           Text="Última verificação: Nunca"
                           Style="{StaticResource Label}"
                           Foreground="{StaticResource TextSecondary}"
                           FontSize="10"/>
            </StackPanel>

            <!-- Botões à direita -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="CheckBtn" 
                        Style="{StaticResource SecondaryButton}"
                        Click="CheckBtn_Click"
                        MinWidth="100"
                        ToolTip="Verificar se há atualizações disponíveis">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔍" FontSize="12" Margin="0,0,6,0"/>
                        <TextBlock Text="Verificar"/>
                    </StackPanel>
                </Button>

                <Button x:Name="UpdateBtn" 
                        Style="{StaticResource SimpleButton}"
                        Margin="12,0,0,0" 
                        Click="UpdateBtn_Click"
                        MinWidth="100"
                        ToolTip="Baixar e instalar a atualização">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⬇️" FontSize="12" Margin="0,0,6,0"/>
                        <TextBlock Text="Atualizar"/>
                    </StackPanel>
                </Button>

                <Button x:Name="CloseBtn" 
                        Style="{StaticResource SecondaryButton}"
                        Margin="12,0,0,0" 
                        Click="CloseBtn_Click"
                        MinWidth="80"
                        ToolTip="Fechar o aplicativo">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✖️" FontSize="10" Margin="0,0,6,0"/>
                        <TextBlock Text="Fechar"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
<Window x:Class="AtualizaAPP.SuccessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atualizacao concluida" Height="220" Width="520"
        WindowStartupLocation="CenterScreen"
        Background="White" ResizeMode="NoResize">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Atualizacao concluida" FontSize="22" FontWeight="Bold"/>
            <TextBlock Text="Seu aplicativo foi atualizado com sucesso." Opacity="0.75"/>
        </StackPanel>

        <Separator Grid.Row="1"/>

        <StackPanel Grid.Row="2" Margin="0,12,0,12">
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="Versao anterior:" FontWeight="SemiBold" Width="140"/>
                <TextBlock x:Name="OldVersionText" Text="v0.0.0.0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <TextBlock Text="Nova versao:" FontWeight="SemiBold" Width="140"/>
                <TextBlock x:Name="NewVersionText" Text="v0.0.0.0"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OpenTargetBtn" Content="Abrir LeituraWPF" Click="OpenTargetBtn_Click"/>
            <Button Content="Fechar" Margin="8,0,0,0" Click="CloseBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
